<div {{ attributes }}>
    {% if media.id is not null %}
        {% if isButton %}
            <button type="button" class="btn btn-danger position-absolute top-0 end-0 m-1" data-bs-toggle="modal" data-bs-target="#confirmDeleteMedia{{ media.id }}" style="z-index: 10;">
                <i class="bi bi-trash"></i>
            </button>
        {% else %}
            <div class="modal fade" id="confirmDeleteMedia{{ media.id }}" tabindex="-1" aria-labelledby="confirmDeleteMedia{{ media.id }}" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Delete Media</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="post" action="{{ path('app_media_delete', {'id': media.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ media.id) }}">
                            <div class="modal-body">
                                <p class="fw-bold">Are you sure you want to delete this Media?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                <button type="submit" class="btn btn-danger">Yes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
</div>
