{% if this.isButton %}
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDelete{{ trick.id }}" style="z-index: 10;">
        <i class="bi bi-trash"></i>
    </button>
{% else %}
    <div class="modal fade" id="confirmDelete{{ trick.id }}" tabindex="-1" aria-labelledby="confirmDelete{{ trick.id }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Trick</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" action="{{ path('app_trick_delete', {'id': trick.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                    <div class="modal-body">
                        <p class="fw-bold">Are you sure you want to delete this Trick?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                        <button type="submit" class="btn btn-danger">Yes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endif %}
