<div {{ attributes }}>
    {{ form_start(form) }}
    <div class="position-relative">
        {{ component('featured_image', {trick: trick}) }}
        <div class="position-absolute top-50 start-50 translate-middle bg-body bg-opacity-50 rounded px-3 py-1 shadow w-50">
            {{ form_row(form.name) }}
        </div>
    </div>
    <div class="mt-3 px-3">
        <div data-live-ignore>
            {% if trick.media is defined %}
                {{ component('media', {media: trick.media}) }}
            {% endif %}
        </div>
        <div class="d-flex row-cols-2 gap-2">
            {{ form_row(form.images) }}
            {{ form_row(form.videos) }}
        </div>
        {{ form_row(form.description) }}
        {{ form_row(form.tags) }}
        <div class="d-flex gap-1">
            {{ form_widget(form.save) }}
            <div data-live-ignore>
                {{ component('delete_trick_modal', {
                    trick: trick,
                    isButton: true
                }) }}
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
{{ component('delete_trick_modal', {trick: trick}) }}
{% if trick.media is defined %}
    {% for medium in trick.media %}
        {{ component('delete_media_modal', {media: medium}) }}
    {% endfor %}
{% endif %}
