{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }} &middot; {{ parent() }}{% endblock %}

{% block body %}
    <div class="container bg-light px-0 pb-3 mt-5">
        <div class="position-relative">
            <img src="https://picsum.photos/id/{{ trick.id }}/1920/1080" class="img-fluid" alt="{{ trick.name }}">
            <div class="position-absolute top-0 end-0 mt-3 me-2">
                {% if is_granted('ROLE_USER') %}
                    <a class="btn btn-secondary" href="{{ path('app_trick_edit', {'id': trick.id}) }}"><i class="bi bi-pen"></i></a>
                    {{ component('delete_modal', {
                        trick: trick
                    }) }}
                {% endif %}
            </div>
            <h1 class="display-1 position-absolute top-50 start-50 translate-middle bg-body bg-opacity-50 rounded px-3 py-1 shadow">{{ trick.name }}</h1>
        </div>
        <div class="mt-3 px-3">
            <div class="d-flex row-cols-6 gap-2">
                {% for media in trick.media %}
                    {% if media.file is defined %}
                        <img class="img-fluid" src="{{ asset('uploads/images/' ~ media.file) }}" alt="">
                    {% endif %}
                    {% if media.youtube is defined %}
                        <div class="img-fluid">
                            <div class="ratio ratio-16x9">
                                <iframe src="http://www.youtube.com/embed/{{ media.youtube }}"></iframe>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <p class="p-5">{{ trick.description|nl2br }}</p>
            <div class="text-center">
                <ul class="list-inline me-auto">
                    <li class="list-inline-item badge text-bg-secondary">Créé le {{ trick.createdAt|date('d/m/Y à H:i') }}</li>
                    {% if trick.updatedAt != trick.createdAt %}
                    <li class="list-inline-item badge text-bg-secondary">Mis à jour le {{ trick.updatedAt|date('d/m/Y à H:i') }}</li>
                    {% endif %}
                    <li class="list-inline-item">Groupe :</li>
                    {% for tag in trick.tags %}
                    <li class="list-inline-item badge rounded-pill text-bg-secondary">{{ tag.name }}</li>
                    {% else %}
                    <li class="list-inline-item badge rounded-pill text-bg-secondary">Sans groupe</li>
                    {% endfor %}
                </ul>
            </div>

        </div>
    </div>
{% endblock %}
